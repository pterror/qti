{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "process",
      "command": "./do build"
    },
    {
      "label": "Clean",
      "type": "process",
      "command": "./do clean"
    },
    {
      "label": "Build Qti.Filesystem",
      "type": "process",
      "command": "cd plugin/filesystem/ && ./do build"
    },
    {
      "label": "Build Qti.Filesystem.Icons",
      "type": "process",
      "command": "cd plugin/filesystem-icons/ && ./do build"
    },
    {
      "label": "Run (Text Editor)",
      "type": "process",
      "command": "./do run ~/git/qti/app/text-editor/app.qml"
    },
    {
      "label": "Run (File Browser)",
      "type": "process",
      "command": "./do run ~/git/qti/app/file-browser/app.qml"
    }
  ]
}
